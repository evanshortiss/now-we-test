{
  "version": 2,
  "builds": [
    {
      "src": "lambdas/*.js",
      "use": "@now/node"
    },
    {
      "src": "lambda.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/method-path",
      "methods": ["GET"],
      "dest": "/lambda.js"
    },
    {
      "src": "/post-path",
      "methods": ["POST"],
      "dest": "/lambda.js"
    },
    {
      "src": "/custom/path/(?<id>.*)",
      "dest": "/lambdas/$id"
    }
  ]
}
